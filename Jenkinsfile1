pipeline {
    agent any

    tools {
        maven 'maven3'
    }

    environment {
        MVN_HOME = tool 'maven3'
    }

    stages {

        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/rrgowd/maven-web-application.git'
            }
        }

        stage('Build') {
            steps {
                sh "${MVN_HOME}/bin/mvn clean package"
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonarqube') {
                    sh "${MVN_HOME}/bin/mvn sonar:sonar"
                }
            }
        }

        stage('Deploy to Nexus') {
            steps {
                sh "${MVN_HOME}/bin/mvn deploy"
            }
        }
    }

    post {
        success {
            echo '✅ Build, SonarQube analysis, and Nexus deploy completed successfully'
        }
        failure {
            echo '❌ Pipeline failed'
        }
    }
}
