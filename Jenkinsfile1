pipeline {
    agent any

    stages {
        stage('git') {
            steps {
                git 'https://github.com/rrgowd/maven-web-application.git'
            }
        }

        stage('maven build') {
            steps {
                script {
                    def mavenHome = tool name: 'maven3'
                    sh "${mavenHome}/bin/mvn clean package"
                }
            }
        }

        stage('sonarqube') {
            steps {
                script {
                    def mavenHome = tool name: 'maven3'
                    sh "${mavenHome}/bin/mvn sonar:sonar"
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    def mavenHome = tool name: 'maven3'
                    sh "${mavenHome}/bin/mvn deploy"
                }
            }
        }        
    }
}
